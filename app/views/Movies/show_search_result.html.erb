<h1> <%= @movie.title %>,<%= @movie.year %> </h1>
<h1> Rating: <%= @movie.rating %> </h1>
<h1> MPAA Rating: <%= @movie.mpaa_rating %> </h1>
<%= image_tag @movie.poster %>




<form action="/movies" method="POST">
<button> Favorite This Movie </button>
<input type="hidden" name="id" value="<%=@movie.id %>" >
<input type="hidden" name="x" value="Favorite">
</form>

<form action='/movies' method="POST">
<button> Save </button>
<input type="hidden" name="id" value="<%=@movie.id %>"

<input type="hidden" name="x" value="Save">

</form>
<%= render :partial => "rating" %>

